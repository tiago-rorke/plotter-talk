  boolean line = false; 
  
  for (int h=0; h<11; h++) {
    
    if(codeFont[index][0][h] > -1 && !line) {
      beginShape();
      line = true;
    }
    
    if( h>0 && codeFont[index][0][h] < 0 && line) {
      endShape();
      line = false;
    }
      
    if( codeFont[index][0][h] > -1 ) {
      float vx = codeFont[index][0][h] * fontScale + x;
      float vy = codeFont[index][1][h] * fontScale + y;
      vertex(vx, vy);
    }
    
  }
}


void drawAlphabet(float x, float y, float fontScale) {
  drawAlphabet(x, y, fontScale, false);
}

void drawAlphabet(float x, float y, float fontScale, boolean preview) {
    
  for (int i=0; i<94; i++) {
    
    if(!preview)
      drawChar(i, x, y, fontScale);
    else
      previewChar(i, x, y, fontScale);
    
    x += fontScale * 3;
    
  }
  
}

void drawScaledAlphabets(float x, float y) {
  drawAlphabet(x, y+30, 2); 
  drawAlphabet(x, y+72, 1.5);
  drawAlphabet(x, y+105, 1); 
  drawAlphabet(x, y+130, 0.75); 
  drawAlphabet(x, y+152, 0.6); 
  drawAlphabet(x, y+170, 0.45);  
}


void drawText(float x, float y, String text) {
  drawText(x, y, text, false);
}

void drawText(float x, float y, String text, boolean preview) {
  for(int i=0; i<text.length(); i++) {
    if (!preview)
      drawChar((int)text.charAt(i)-32, x, y, textSize/5);
    else
      previewChar((int)text.charAt(i)-32, x, y, textSize/5);
    x += (3*textSize/5)*1.3;    
  }
}

