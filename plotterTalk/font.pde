void drawChar(int index, float x, float y, float fontScale) {
    
  boolean line = false; 
  
  for (int h=0; h<11; h++) {
    
    if(codeFont[index][0][h] > -1 && !line) {
      beginPlot();
      line = true;
    }
    
    if( h>0 && codeFont[index][0][h] < 0 && line) {
      endPlot();
      line = false;
    }
      
    if( codeFont[index][0][h] > -1 ) {
      float vx = codeFont[index][0][h] * fontScale + x;
      float vy = codeFont[index][1][h] * fontScale + y;
      plotVertex(vx, vy);
    }
    
    if(h==10) {
      endPlot(); 
      line = false;
    }
    
  }
}

